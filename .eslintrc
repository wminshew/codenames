{
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "plugins": [
    "prettier", "react", "jsx-ally", "import", "flowtype"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "eslint/comma-dangle": "only-multiline",
    "prettier/prettier": "error",
    "prettier/trailingComma" : "all"
  }
}
